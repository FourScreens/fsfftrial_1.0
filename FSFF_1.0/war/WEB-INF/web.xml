<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">


	<!-- Servlets -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.fsff.presentation.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LogOut</servlet-name>
		<servlet-class>com.fsff.presentation.LogoutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LogOut</servlet-name>
		<url-pattern>/LogOut</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SignUpServlet</servlet-name>
		<servlet-class>com.fsff.presentation.SignUpServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SignUpServlet</servlet-name>
		<url-pattern>/SignUpServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SubmitFilmServlet</servlet-name>
		<servlet-class>com.fsff.presentation.SubmitFilmServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SubmitFilmServlet</servlet-name>
		<url-pattern>/SubmitFilmServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>viewFilm</servlet-name>
		<servlet-class>com.fsff.presentation.ViewFilmServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>viewFilm</servlet-name>
		<url-pattern>/viewFilm</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SearchServlet</servlet-name>
		<servlet-class>com.fsff.presentation.SearchServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SearchServlet</servlet-name>
		<url-pattern>/Search</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>VotingServlet</servlet-name>
		<servlet-class>com.fsff.presentation.VotingServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>VotingServlet</servlet-name>
		<url-pattern>/voting</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>