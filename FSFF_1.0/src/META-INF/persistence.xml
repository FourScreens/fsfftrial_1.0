<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="com.fsff.festival">
		<description>
            Cloud SQL Hibernate Trial
        </description>


		<class>com.fsff.entity.Address</class>
		<class>com.fsff.entity.Admin</class>
		<class>com.fsff.entity.Clip1</class>
		<class>com.fsff.entity.Clip2</class>
		<class>com.fsff.entity.Clip3</class>
		<class>com.fsff.entity.Comment</class>
		<class>com.fsff.entity.Festival</class>
		<class>com.fsff.entity.Film</class>
		<class>com.fsff.entity.Genre</class>
		<class>com.fsff.entity.Winner</class>
		<class>com.fsff.entity.Login</class>
		<class>com.fsff.entity.User</class>
		<class>com.fsff.entity.Vote</class>
		<class>com.fsff.entity.Votes</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="com.google.appengine.api.rdbms.AppEngineDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:google:rdbms://shaped-glazing-283:firsttrial/fsfftrial" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="eclipselink.target-database" value="MySQL" />
			<property name="eclipselink.platform.class.name"
				value="org.eclipse.persistence.platform.database.MySQLPlatform" />

			<!-- <property name="javax.persistence.jdbc.driver" value="com.google.appengine.api.rdbms.AppEngineDriver" 
				/> <property name="javax.persistence.jdbc.url" value="jdbc:google:rdbms://localhost/fsfftrial" 
				/> <property name="javax.persistence.jdbc.username" value="root"/> <property 
				name="javax.persistence.jdbc.password" value=""/> -->



			<!-- <property name="javax.persistence.jdbc.url" value="jdbc:google:rdbms://your_cloud_sql_instance_id/guestbook" 
				/> -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />

			<!-- You may want to change this to false in production -->
			<property name="hibernate.show_sql" value="true" />

			<!-- You can change this to create at the first time -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<!-- Set this to 0 otherwise you sometimes get errors -->
			<property name="hibernate.connection.pool_size" value="0" />
		</properties>

	</persistence-unit>


